pipeline {
     agent { label 'linux' }  // This means Jenkins will run on any available agent (executor)

    environment {
        ANSIBLE_PLAYBOOK = 'install_docker.yml'  // Path to your Ansible playbook in the GitHub repo
        INVENTORY_FILE = '/home/Hemu_key/ansible_books/inventory.ini'  // Path to the inventory file on your Azure VM (full path)
        AZURE_SSH_PASSWORD = credentials('ssh_password')  // Use Jenkins credentials for SSH password
    }

    stages {
        stage('Checkout Code from GitHub') {
            steps {
                // Pull the latest code from GitHub (main branch)
                git branch: 'main', url: 'https://github.com/HemantPatil27897/27897_casestudy.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Ensure Ansible and dependencies are installed (this can be customized)
                sh 'sudo apt-get update && sudo apt-get install -y ansible'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                // Run the Ansible playbook using your GitHub repository
                // Use the Jenkins credentials for SSH password
                sh """
                    ansible-playbook -i ${INVENTORY_FILE} ${ANSIBLE_PLAYBOOK} --extra-vars "ansible_ssh_pass=${AZURE_SSH_PASSWORD}" --ask-pass
                """
            }
        }
    }

    post {
        success {
            echo 'Docker installation was successful!'
        }
        failure {
            echo 'Docker installation failed!'
        }
    }
}
