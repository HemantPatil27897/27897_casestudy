pipeline {
    agent {
        docker {
            image 'ansible/ansible:latest'  // Use an official Ansible Docker image
            args '-v /home/Hemu_key/ansible_books:/workspace'  // Mount your playbooks directory
        }
    }

    environment {
        ANSIBLE_PLAYBOOK = 'install_docker.yml'
        INVENTORY_FILE = '/workspace/inventory.ini'
        AZURE_SSH_PASSWORD = credentials('ssh_password')
    }

    stages {
        stage('Checkout Code from GitHub') {
            steps {
                git branch: 'main', url: 'https://github.com/HemantPatil27897/27897_casestudy.git'
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sh """
                    ansible-playbook -i ${INVENTORY_FILE} ${ANSIBLE_PLAYBOOK} --extra-vars "ansible_ssh_pass=${AZURE_SSH_PASSWORD}" --ask-pass
                """
            }
        }
    }

    post {
        success {
            echo 'Docker installation was successful!'
        }
        failure {
            echo 'Docker installation failed!'
        }
    }
}
